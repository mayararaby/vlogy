{
	"source":  {
		"include": ["src"],
		"includePattern": ".js$",
		"exclude": ["node_modules", "a_sub_directory"],
		"excludePattern": "(node_modules/|docs)"
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	},
	"opts": {
		"recurse": true,
		"encoding": "utf8",
		"destination": "./docs/",
		"template": "node_modules/clean-jsdoc-theme",
		"readme": "./README.MD",

		"theme_opts": {
			"title": "Vlogy",
      "static_dir": ["./README-Assets"],
			"meta": [
				{
					"name": "author",
					"content": "Mayar Araby"
				}
			]
		}

	},
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc"]
	},
	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
	}
}
